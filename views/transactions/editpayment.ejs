<$- include('./../_partials/head') $>

 <form class="col-xs-4" action="/transactions/<$= transaction.id $>/<$= payment.id $>?_method=PUT" method="POST">

    <div class="form-group">     
        <label>Date</label>
        <div class="input-group date" id="datetimepicker1">
          <input type="text" name="name" class="form-control" value="<$= payment.date $>">
          <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
          </span>
       </div> 
        
       <div class="form-group">  
        <label>Amount</label>
        <input type="text" name="amount" class="form-control" value="<$= payment.amount $>">
       </div> 

   </div>     

        <input type="hidden" name="_method" value="put"/>
        <button class="btn btn-default" type="submit" name="transactionId" value="<$= transaction.id $>">Update</button>

    </form>


    <script type="text/javascript">
      $(function() {
        $('#datetimepicker1').datetimepicker();
      });
    </script>


