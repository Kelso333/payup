<$- include('./../_partials/head') $>

<br>
<h1>Edit Transaction</h1>

    <form action="/transactions/<$= transaction.id $>?_method=PUT" method="POST">
        <label>Date</label>
        <input type="text" name="date" value="<$= transaction.date $>"><br>
        <br>
        <label>Name</label>
        <input type="text" name="name" value="<$= transaction.name $>"><br>
        <br>
        <label>Description</label>
        <input type="text" name="description" value="<$= transaction.description $>"><br>
        <br>
        <label>Amount</label>
        <input type="text" name="amount" value="<$= transaction.amount $>"><br>
        <br>
        <label>Phone</label>
        <input type="text" name="phone" value="<$= transaction.phone $>"><br>
        <br>
        <input type="hidden" name="_method" value="put"/>
        <button type="submit" name="transactionId" value="<$= transaction.id $>">Update</button>
    </form>

